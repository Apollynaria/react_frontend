{
    // Настройки компилятора TypeScript
    "compilerOptions": {
      "target": "es5", // ECMAScript (стандарт, на котором базируется JavaScript)
      "lib": ["dom"], // библиотеки, доступные для использования (dom добавляет объявления типов для DOM)
      "allowJs": true, // разрешение использования файлов JavaScript
      "skipLibCheck": true, // пропуск проверки библиотек
      "allowSyntheticDefaultImports": true, // разрешение автоматического импорта по умолчанию для модулей, которые не экспортируют явные значения по умолчанию
      "strict": true, // включение строгих проверок
      "moduleResolution": "node", // разрешение модульных путей по стандарту Node.js
      "jsx": "react", // использование синтаксиса JSX для React
      "noEmit": true // отключение вывода результатов компиляции в файлы (означает, что компилятор TypeScript не должен создавать файлы JavaScript после успешной компиляции)
    },
    // Включение файлов для компиляции
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/**/*.js", "src/**/*.jsx"]
}